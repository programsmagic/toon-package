{
  "name": "@programsmagic/toon-backend-node",
  "version": "0.1.0",
  "description": "Node.js/TypeScript backend adapter for Toon Agent Bridge with Fastify, SSE, and WebSocket support",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "toon-bridge": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest"
  },
  "keywords": [
    "agent-bridge",
    "fastify",
    "sse",
    "websocket",
    "openapi",
    "agents-json",
    "ai-agents",
    "api-server",
    "event-streaming"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/programsmagic/toon-package.git",
    "directory": "packages/backend-node"
  },
  "bugs": {
    "url": "https://github.com/programsmagic/toon-package/issues"
  },
  "homepage": "https://programsmagic.github.io/toon-package",
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@programsmagic/toon-core": "workspace:*",
    "@programsmagic/toon-format": "workspace:*",
    "@programsmagic/toon-converter": "workspace:*",
    "@programsmagic/toon-tokenizer": "workspace:*",
    "@fastify/cors": "^8.4.0",
    "@fastify/static": "^6.12.0",
    "@fastify/websocket": "^8.3.0",
    "fastify": "^4.24.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}

